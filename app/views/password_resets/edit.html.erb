<% content_for :title, "Reset Password" %>
<%= form_for @user, url: password_reset_path(params[:id]) do |form| %>
  <div class="page-wrapper bg-dark">
    <div class="row justify-content-center">
      <div class="col-12 col-md-9 col-lg-7 col-xl-5">
        <div class="white-box bg-light">
          <h1 class="title text-center"> RESET PASSWORD</h1>
          <br />
          <% if @user.errors.any? %>
            <% @user.errors.full_messages.each do |msg| %>
              <div class="alert alert-danger"><%= msg %></div>
            <%end%>
          <%end%>
          <div class="form-group row">
            <%= form.label :password, "New password", class:"col-sm-3 col-form-label font-weight-bold" %>
            <div class="col-sm-9">
              <%= form.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "Enter new password", required: true %>
            </div>
          </div>
          <div class="form-group row">
            <%= form.label :password_conformation, "Conform password", class:"col-sm-3 col-form-label font-weight-bold" %>
            <div class="col-sm-9">
              <%= form.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "Repeat new password", required: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-12 text-center">
              <%= form.submit "Reset Password", class:"btn btn-primary btn-lg" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>